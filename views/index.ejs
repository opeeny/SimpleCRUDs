<html>
    <head>
        <meta charset="UTF-8"> 
        <title>Simple Quotes</title>
        <link rel="stylesheet" href="index.css">
    </head>
    <body>
        <h1 style="color: rgb(192, 18, 62); text-align: center;">Mind blowing quotes ever</h1>
        <div class="quotes-form">
            <form style="text-align: center;" action="/quotes" method="POST">
                <input type="text" placeholder="Author" name="author">
                <input type="text" placeholder="quote" name="quote">
                <button type="submit">Submit</button>
            </form>
        </div>
        <div class="quotes">
            <h2>Quotes</h2>
            <ul class="quotes">
                <!-- Loop through quotes -->
                <% for (var i = 0; i < quotes.length; i++) { %>
                    <li class="quote">
                        <!-- Output name from the iterated quote object-->
                        <span><%= quotes[i].author %></span>:
                        <!-- Output quote from the iterated quote object-->
                        <span><%= quotes[i].quote %></span>
                    </li>
                <% } %>
            </ul>
        </div>
    </body>
</html>